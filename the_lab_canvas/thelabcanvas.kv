<ExampleGridLayout@GridLayout>:
    cols: 3
    canvas:
        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2
            size: s, s
        Line:
            # points: (0, 0, 100, 100, 200, 0, 300, 100)
            points: (0,0,self.width/4,100,self.width/2, 0, self.width*3/4, 100, self.width, 0)
            width: 2
        Ellipse:
            pos: self.center_x-s*1.5, self.center_y-s/2
            size: s, s/2

<ExampleGridLayout2@GridLayout>:
    canvas:
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: dp(2)
        Line:
            points: (self.width/2, 0, self.width/2, self.height)
            width: 2

<ExampleWidget3@Widget>:
    canvas:
        Line:
            circle: (200, 100, 50) # center_x, center_y, radius
        Line:
            ellipse: (100, 200, 100, 50) # x, y, radius_x, radius_y
        Line:
            rectangle: (300, 150, 200, 80) # x, y, w, h