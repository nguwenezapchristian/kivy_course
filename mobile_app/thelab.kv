<ButtonWidgetExample@GridLayout>:
    cols: 4
    rows: 2
    ToggleButton:
        text: "OFF"
        size_hint: None, 1
        width: "100dp"
        font_name: "fonts/Lcd.ttf"
        font_size: "40dp"
        color: 1, .5, 1, 1
        on_state: root.on_state_toggle_button(self)
    Button:
        text: "Count"
        on_press: root.on_press_func()
        # size: .1, .1
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, .5, 1, 1
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, .5, 1, 1
    Button:
        text: "Reset"
        on_press: root.reset_count()
        # size: .1, .1
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, .5, 1, 1
        disabled: not root.count_enabled
    Switch:
        id: my_switch
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider:
        id: mySlider
        min: 0
        max: 100
        # value: 50
        # on_value: root.on_slide_value(self)
        orientation: "vertical"
        disabled: not my_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            # text: root.slide_value_txt
            text: str(int(mySlider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "60dp"
            color: 1, 0.5, 1, 1
        ProgressBar:
            max: 100
            value: mySlider.value
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: my_text_input
            text: "Chris"
            multiline: False
            on_text_validate: root.text_input_validate(self)
        Label:
            # text: my_text_input.text
            text: "Your name is: " + root.text_input_str


